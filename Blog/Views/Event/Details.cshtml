@model Blog.Models.Event

@{
    ViewBag.Title = "Event details";
}

<div class="container" style="background-color: white">
    <article>
        <header>
            <h2>
                @Model.Title
            </h2>
        </header>
        <p style="text-align: justify">
            @Model.Content
        </p>
        <small class="author">
            Date: @string.Format("{0:dd.MM.yyyy}", Model.Date)
        </small>
        <footer class="pull-right">
            @if (this.User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", "Event", new { @id = Model.Id }, new { @class = "btn btn-success btn-xs" })
                @Html.ActionLink("Delete", "Delete", "Event", new { @id = Model.Id }, new { @class = "btn btn-danger btn-xs" })
                @Html.ActionLink("Back", "Index", "Event", null, new { @class = "btn btn-default btn-xs" })
            }
            else
            {
                @Html.ActionLink("Back", "Index", "Event", null, new { @class = "btn btn-default btn-xs" })
            }
        </footer>
    </article>
</div>
<hr />
